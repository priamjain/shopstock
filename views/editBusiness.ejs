<%-include("./partials/header")%>


<div id="shopform" class="container w-50 rounded">
	<a class="btn btn-danger text-light" href="/">Cancel</a>
	<form action="/business/<%=business._id%>/edit?_method=PUT" method="POST">
		<div class="form-group">
			<label for="shopname">Shop Name</label>
			<input type="text" class="form-control" id="shopname" name="name"placeholder="ABC Electronics"  value="<%=business.name%>">
		</div>
		<div class="form-group">
			<label for="shopad">Shop Address</label>
			<input type="text" class="form-control" id="shopad" name="address"placeholder="123-AB, xyz" value="<%=business.address%>">
		</div>
		<div class="form-group">
			<label for="shoparea">Landmark Area</label>
			<input type="text" class="form-control" id="shoparea" name="landmark"placeholder="PQR Bazaar" value="<%=business.landmark%>">
		</div>
		<div class="form-group">
			<label for="shoppin">PINCODE</label>
			<input type="text" class="form-control" id="shoppin" name="pincode" placeholder="123456" value="<%=business.pincode%>">
		</div>
		<div class="form-group">
			<label for="opendays">Open Days</label>
			<br>
			<input type="hidden" id="days" name="days" value="<%=JSON.stringify(business.days)%>">
			<div id="opendays" class="btn-group" role="group" name="days">
				<button id="SUN" type="button" class="btn btn-secondary"name=days[SUN]>SUN</button>
				<button id="MON" type="button" class="btn btn-secondary"name=days[MON]>MON</button>
				<button id="TUE" type="button" class="btn btn-secondary"name=days[TUE]>TUE</button>
				<button id="WED" type="button" class="btn btn-secondary"name=days[WED]>WED</button>
				<button id="THU" type="button" class="btn btn-secondary"name=days[THU]>THU</button>
				<button id="FRI" type="button" class="btn btn-secondary"name=days[FRI]>FRI</button>
				<button id="SAT" type="button" class="btn btn-secondary"name=days[SAT]>SAT</button>
			</div>
		</div>
		<button type="submit" class="btn btn-primary w-25">SAVE</button>
	</form>	

</div>


<%-include("./partials/footer")%>