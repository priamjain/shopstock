<%-include('./partials/header')%>

<div id="edit" class="container mt-5 bg-info p-4 rounded">
		<div id="editform" class="container rounded">
			<form action="/user/<%=user._id%>?_method=PUT" method="POST">
				<div class="form-group form-row">
					<div class="col">
					<label for="editfname">First Name</label>
					<input type="Text" class="form-control" name="firstname" id="editfname" value="<%=user.firstname%>">
					</div>
					<div class="col">
					<label for="editlname">Last Name</label>
					<input type="Text" class="form-control" name="lastname" id="editlname" value="<%=user.lastname%>" >
					</div>
				</div>
				<div class="form-group ">
					<label for="emailid">Email address</label>
					<input type="email" readonly class="form-control" name="email" id="emailid" value="<%=user.email%>">
				</div>
				<div class="form-group">
					<label for="oldpass">Old Password</label>
					<input type="password" class="form-control" name="oldpass" id="oldpass">
				</div>
				<div class="form-group">
					<label for="newpass">New Password</label>
					<input type="password" class="form-control" id="newpass">
				</div>
				<button type="submit" class="btn btn-primary w-25">Save</button>
			</form>
		</div>
	</div>



<%-include('./partials/footer')%>